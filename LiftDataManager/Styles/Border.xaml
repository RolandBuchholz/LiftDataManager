<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Light">
            <AcrylicBrush
                x:Key="SpeziCardBackground"
                FallbackColor="{ThemeResource SystemListLowColor}"
                TintColor="{ThemeResource SystemListLowColor}"
                TintOpacity="0.8" />
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <AcrylicBrush
                x:Key="SpeziCardBackground"
                FallbackColor="{ThemeResource SystemChromeMediumColor}"
                TintColor="{ThemeResource SystemChromeAltHighColor}"
                TintOpacity="0.8" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
    <Style x:Name="SpeziRowBorderStyle" TargetType="Border">
        <Setter Property="Margin" Value="0,0,5,5" />
        <Setter Property="Background" Value="{ThemeResource SpeziCardBackground}" />
        <Setter Property="CornerRadius" Value="5" />
    </Style>
</ResourceDictionary>