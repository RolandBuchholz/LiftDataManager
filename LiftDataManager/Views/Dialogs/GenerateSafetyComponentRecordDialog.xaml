<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog
    x:Class="LiftDataManager.Views.Dialogs.GenerateSafetyComponentRecordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:SpeziControls="using:LiftDataManager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LiftDataManager.Views.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="GenerateSafetyComponentRecord"
    Title="Sicherheitskomponente erstellen"
    MinWidth="750"
    VerticalAlignment="Stretch"
    CloseButtonText="Abbrechen"
    IsPrimaryButtonEnabled="True"
    PrimaryButtonStyle="{StaticResource ContentDialogAccentButtonStyle}"
    PrimaryButtonText="Erstellen"
    mc:Ignorable="d">
    <Interactivity:Interaction.Behaviors>
        <Interactivity:EventTriggerBehavior EventName="Loaded">
            <Interactivity:InvokeCommandAction Command="{x:Bind ViewModel.GenerateSafetyComponentRecordDialogLoadedCommand}" CommandParameter="{Binding ElementName=GenerateSafetyComponentRecord}" />
        </Interactivity:EventTriggerBehavior>
    </Interactivity:Interaction.Behaviors>
    <ContentDialog.Resources>
        <Style BasedOn="{StaticResource DefaultContentDialogStyle}" TargetType="local:GenerateSafetyComponentRecordDialog" />
    </ContentDialog.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="500" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ComboBox
                Grid.Row="0"
                Grid.Column="0"
                Margin="5,0,5,5"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="Name"
                ItemsSource="{x:Bind ViewModel.SafetyComponentTyps, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedSafetyComponentTyp, Mode=TwoWay}" />
            <ComboBox
                Grid.Row="1"
                Grid.Column="0"
                Margin="5,0,5,5"
                HorizontalAlignment="Stretch"
                DisplayMemberPath="DisplayName"
                ItemsSource="{x:Bind ViewModel.SafetyComponents, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectedSafetyComponent, Mode=TwoWay}"
                Visibility="{x:Bind ViewModel.SafetyComponentSelectionVisibility, Mode=OneWay}" />
            <Grid
                Grid.Row="2"
                Grid.Column="0"
                Margin="5,0,5,5"
                Visibility="{x:Bind ViewModel.SafetyComponentGridVisibility, Mode=OneWay}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Hallo" />
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Text="Hallo" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Hallo" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Hallo" />
            </Grid>
        </Grid>
    </ScrollViewer>
</ContentDialog>