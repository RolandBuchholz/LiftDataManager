<Page
    x:Class="LiftDataManager.Views.WartungMontageTüvPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SpeziControls="using:LiftDataManager.Controls"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:LiftDataManager.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BoolToObjectConverter
            x:Key="InvertBoolToObjectConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <helpers:CustomInputStringConveter x:Key="CustomInputStringConveter" />
        <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
    </Page.Resources>
    <Grid
        x:Name="ContentArea"
        Margin="5"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
        CornerRadius="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <!--  Parameter  -->
        <ScrollViewer
            Grid.Row="0"
            Margin="5,5,0,5"
            Padding="10,5,20,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <controls:Expander
                    x:Name="Wartung"
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    ExpandDirection="Down"
                    Header="Wartung"
                    IsExpanded="True">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,*">
                        <Grid
                            Name="Wartung1"
                            Grid.Row="0"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Funktionswartung jährlich"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_Funktionswartungjaehrl'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Wartung Zusatzinformationen"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_Wartung_Info_1'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung2"
                            Grid.Row="1"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Wartung / Inspektion n AMEV jährlich "
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_WartungInspektionnAMEVjaehrlich'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Wartung Zusatzinformationen"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_Wartung_Info_2'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung3"
                            Grid.Row="2"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Vollwartung jährlich"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_Vollwartungjaehrlich'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Wartung Zusatzinformationen"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_Wartung_Info_3'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung4"
                            Grid.Row="3"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Wart. / Insp. / Install. / Verb. N. AMEV jährl."
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_WartInspInstVerbesserNAMEVjaehrl'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Wartung Zusatzinformationen"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_Wartung_Info_4'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung5"
                            Grid.Row="4"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Notrufaufschaltung"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_Notrufaufschaltung'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Notbefreiung durch:"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_ANNotbefreiungdurch'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung6"
                            Grid.Row="5"
                            ColumnDefinitions="*,*,2*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Wartung enthalten"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_WartungenthMonate'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Monate:"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_WA_AnzMonate'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung7"
                            Grid.Row="6"
                            ColumnDefinitions="*,*,2*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Notruf enthalten"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_NotrufenthaltMonate'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                Header="Monate:"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_NO_AnzMonate'].Value, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                Header="Notbefreiung durch:"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_WANotbefreiungdurch'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung8"
                            Grid.Row="7"
                            ColumnDefinitions="*">
                            <TextBox
                                Grid.Column="0"
                                MinHeight="60"
                                Margin="5,0,5,0"
                                AcceptsReturn="True"
                                Header="Sonstiges Wartung"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_sonstigesWart'].Value, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </Grid>
                        <Grid
                            Name="Wartung9"
                            Grid.Row="8"
                            ColumnDefinitions="*,*,*,*">
                            <TextBlock
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Text="VOB Gewährleistung" />
                            <CheckBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="2 Jahre"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_VOB2'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="4 Jahre"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_VOB4'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="3"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="5 Jahre"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_VOB5'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Wartung10"
                            Grid.Row="9"
                            ColumnDefinitions="*">
                            <TextBox
                                Grid.Column="0"
                                MinHeight="60"
                                Margin="5,0,5,0"
                                AcceptsReturn="True"
                                Header="Sonstiges VOB Gewährleistung"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_SonstigesVOB'].Value, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Grid>
                </controls:Expander>
                <controls:Expander
                    x:Name="Montage"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    ExpandDirection="Down"
                    Header="Montage / TÜV"
                    IsExpanded="True">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                        <Grid
                            Name="Montage1"
                            Grid.Row="0"
                            ColumnDefinitions="*,*,*">
                            <TextBlock
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Text="Potentialausgleich" />
                            <CheckBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Anschluß durch BE"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_AnschludurchBE'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Anschluß bauseits"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_Anschlubauseits'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Montage2"
                            Grid.Row="1"
                            ColumnDefinitions="*,*,*">
                            <TextBlock
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Text="Schachttürmontage" />
                            <CheckBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Verfugen zum Baukörper"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_VerfugenzumBaukoerper'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <Grid
                                Grid.Column="2"
                                Margin="5,10,5,0"
                                ColumnDefinitions="Auto,*">
                                <CheckBox
                                    Grid.Column="0"
                                    MinWidth="0"
                                    VerticalAlignment="Bottom"
                                    IsChecked="{x:Bind ViewModel.ParamterDictionary['var_BenDef_56'].Value, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}}" />
                                <TextBox
                                    Grid.Column="1"
                                    PlaceholderText="benutzerdefinierte Eingabe"
                                    Text="{x:Bind ViewModel.ParamterDictionary['var_BenDef_56'].Comment, Mode=TwoWay, Converter={StaticResource CustomInputStringConveter}}" />
                            </Grid>
                        </Grid>
                        <Grid
                            Name="Montage3"
                            Grid.Row="2"
                            ColumnDefinitions="*,*,*">
                            <TextBlock
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Center"
                                Text="Montagepersonal" />
                            <CheckBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="eigenes Personal erforderlich"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_eigenesPersonalerforderlich'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Subunternehmer erlaubt"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_Subunternehmererlaubt'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Montage4"
                            Grid.Row="3"
                            ColumnDefinitions="*">
                            <TextBox
                                Grid.Column="0"
                                MinHeight="90"
                                Margin="5,0,5,0"
                                AcceptsReturn="True"
                                Header="Sonstiges Montage / TÜV"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_sonstigesMoTUEV'].Value, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Grid>
                </controls:Expander>
                <controls:Expander
                    x:Name="RWA"
                    Grid.Row="2"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    ExpandDirection="Down"
                    Header="Rauch- und Wärmeabzugsanlage"
                    IsExpanded="True">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                        <Grid
                            Name="RWA1"
                            Grid.Row="0"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Lieferung/Montage BE"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_LieferungMontageBE'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Lieferung/Montage bauseits"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_LieferungMontagebauseits'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="RWA2"
                            Grid.Row="1"
                            ColumnDefinitions="*,*">
                            <ComboBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="RWA"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Schachtentrauchung'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Schachtentrauchung'].DropDownListValue, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                Header="RWA Typ"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_RwaBezeichnung'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="RWA3"
                            Grid.Row="2"
                            ColumnDefinitions="*,*">
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Potentialfreier Kontakt auf GLT / BMZ"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_potfreierKontakt'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}" />
                            <Grid
                                Grid.Column="1"
                                Margin="5,10,5,0"
                                ColumnDefinitions="Auto,*">
                                <CheckBox
                                    Grid.Column="0"
                                    MinWidth="0"
                                    VerticalAlignment="Bottom"
                                    IsChecked="{x:Bind ViewModel.ParamterDictionary['var_BenDef_50'].Value, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}}" />
                                <TextBox
                                    Grid.Column="1"
                                    PlaceholderText="benutzerdefinierte Eingabe"
                                    Text="{x:Bind ViewModel.ParamterDictionary['var_BenDef_50'].Comment, Mode=TwoWay, Converter={StaticResource CustomInputStringConveter}}" />
                            </Grid>
                        </Grid>
                        <Grid
                            Name="RWA4"
                            Grid.Row="3"
                            ColumnDefinitions="*">
                            <TextBox
                                Grid.Column="0"
                                MinHeight="90"
                                Margin="5,0,5,0"
                                AcceptsReturn="True"
                                Header="Sonstiges Rauch- und Wärmeabzugsanlage"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_sonstigesRWA'].Value, Mode=TwoWay}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </Grid>
                </controls:Expander>
                <Button
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{x:Bind ViewModel.SaveAllSpeziParametersAsync}"
                    Style="{StaticResource SaveButton}">
                    <ToolTipService.ToolTip>
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="Save All Parameter" />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Save" />
                </Button>
            </Grid>
        </ScrollViewer>
        <!--  InfoSidebarPanel  -->
        <SpeziControls:SidebarPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,10,10,10"
            InfoText="{x:Bind ViewModel.InfoSidebarPanelText, Mode=TwoWay}" />
        <!--  Footer  -->
        <SpeziControls:FooterControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0"
            CheckOut="{x:Bind ViewModel.CheckOut, Mode=OneWay}"
            ParameterFound="{x:Bind ViewModel.ParamterDictionary.Count, Mode=OneWay}"
            XmlPath="{x:Bind ViewModel.FullPathXml, Mode=OneWay}" />
    </Grid>
</Page>
