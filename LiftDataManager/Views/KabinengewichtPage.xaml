                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="3"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.BelagAufDerDeckeGewichtproQm, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="4"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        Style="{StaticResource BodyTextStyle}"
