<Page
    x:Class="LiftDataManager.Views.EinreichunterlagenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SpeziControls="using:LiftDataManager.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:LiftDataManager.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    mc:Ignorable="d">

    <Page.Resources>
        <media:AttachedCardShadow
            x:Key="CommonShadow"
            CornerRadius="5"
            Offset="5" />
        <helpers:NewLineConveter x:Key="NewLineConveter" />
        <converters:BoolToObjectConverter
            x:Key="InvertBoolToObjectConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <!--  Parameter  -->
        <ScrollViewer
            Grid.Row="0"
            Margin="0,0,0,0"
            Padding="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Expander
                    x:Name="Einreichunterlagen"
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Header="Einreichunterlagen"
                    IsExpanded="True"
                    Style="{StaticResource ExpanderContentStyle}">
                    <StackPanel Margin="5,0,5,0" Orientation="Vertical">
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="24"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="Beschreibung der Aufzugsanlage" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Betriebsort:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="500"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Projekt'].Value}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Fabrik-Nr.:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="300"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_FabrikNummer'].Value}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Art des Aufzuges:" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="300"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.LiftType}" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Aufzugtyp:" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                Width="300"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Bausatz'].Value}" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Errichtungsvorschrift:" />
                            <StackPanel
                                Grid.Row="4"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox
                                    MinWidth="150"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_Normen'].Value}" />
                                <CheckBox
                                    Margin="15,5,0,5"
                                    Content="EN 81-21"
                                    IsChecked="{x:Bind ViewModel.ParameterDictionary['var_EN8121'].Value, Converter={StaticResource StringToBoolConverter}}"
                                    IsHitTestVisible="False" />
                                <CheckBox
                                    Margin="0,5,0,5"
                                    Content="EN 81-72"
                                    IsChecked="{x:Bind ViewModel.ParameterDictionary['var_EN8172'].Value, Converter={StaticResource StringToBoolConverter}}"
                                    IsHitTestVisible="False" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Richtlinie:" />
                            <TextBox
                                Grid.Row="5"
                                Grid.Column="1"
                                Width="300"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="Aufzugsrichtlinie 2014/33/EU" />
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Name des Betreibers:" />
                            <TextBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Width="500"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Betreiber'].Value}" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Einzelprüfung:" />
                            <TextBox
                                Grid.Row="7"
                                Grid.Column="1"
                                Width="300"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.TuevExamination}" />
                        </Grid>
                        <!--  1. Allgemeine Angaben  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="1. Allgemeine Angaben" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Hersteller und/oder Einführer:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="500"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.Manufacturer}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Tragfähigkeit:" />
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox Style="{StaticResource InfoTextboxStyle}" Text="{x:Bind ViewModel.ParameterDictionary['var_Q'].Value}" />
                                <TextBlock
                                    Margin="5,0,5,10"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="kg oder" />
                                <TextBox Style="{StaticResource InfoTextboxStyle}" Text="{x:Bind ViewModel.ParameterDictionary['var_Personen'].Value}" />
                                <TextBlock
                                    Margin="5,0,5,10"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="Personen" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Baujahr:" />
                            <ComboBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="120"
                                Margin="0,0,0,5"
                                ItemsSource="{x:Bind ViewModel.LiftDocumentation.Years, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ManufactureYear, Mode=TwoWay}" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Errichtungsdatum:" />
                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="1"
                                Margin="0,0,0,5"
                                Orientation="Horizontal">
                                <ComboBox
                                    Width="120"
                                    Margin="0,0,5,0"
                                    ItemsSource="{x:Bind ViewModel.LiftDocumentation.Months, Mode=OneWay}"
                                    SelectedItem="{x:Bind ViewModel.MonthOfConstruction, Mode=TwoWay}" />
                                <ComboBox
                                    Width="120"
                                    ItemsSource="{x:Bind ViewModel.LiftDocumentation.Years, Mode=OneWay}"
                                    SelectedValue="{x:Bind ViewModel.YearOfConstruction, Mode=TwoWay}" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Betriebsgeschwindigkeit:" />
                            <StackPanel
                                Grid.Row="4"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox
                                    MinWidth="120"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_v'].Value}" />
                                <TextBlock
                                    Margin="5,0,5,12"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="m/s" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Förderhöhe:" />
                            <StackPanel
                                Grid.Row="5"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox
                                    MinWidth="120"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_FH'].Value}" />
                                <TextBlock
                                    Margin="5,0,5,12"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="m" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="6"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Anzahl der Schachttüren:" />
                            <TextBox
                                Grid.Row="6"
                                Grid.Column="1"
                                Width="120"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Zugangsstellen'].Value}" />
                            <TextBlock
                                Grid.Row="7"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Anzahl der Haltestellen:" />
                            <TextBox
                                Grid.Row="7"
                                Grid.Column="1"
                                Width="120"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Haltestellen'].Value}" />
                            <TextBlock
                                Grid.Row="8"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,5,0,10"
                                Text="{x:Bind ViewModel.SameShaftWith}" />
                        </Grid>
                        <!--  2. Fahrschacht - Fahrschachtzugänge  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="2. Fahrschacht - Fahrschachtzugänge" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Ausführung der Fahrschachtwände:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="300"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Schacht'].Value}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="untere Schutzraumhöhe:" />
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBox
                                    Width="100"
                                    Text="{x:Bind ViewModel.SafetySpacePit, Mode=TwoWay}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="mm   Art des Schutzraums" />
                                <ComboBox
                                    Width="150"
                                    ItemsSource="{x:Bind ViewModel.LiftDocumentation.ProtectedSpacePits, Mode=OneWay}"
                                    SelectedValue="{x:Bind ViewModel.ProtectedSpaceTypPit, Mode=TwoWay}" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="obere Schutzraumhöhe:" />
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Margin="0,0,0,5"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <TextBox
                                    Width="100"
                                    Text="{x:Bind ViewModel.SafetySpaceHead, Mode=TwoWay}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Margin="5"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="mm   Art des Schutzraums" />
                                <ComboBox
                                    Width="150"
                                    ItemsSource="{x:Bind ViewModel.LiftDocumentation.ProtectedSpaceHeads, Mode=OneWay}"
                                    SelectedValue="{x:Bind ViewModel.ProtectedSpaceTypHead, Mode=TwoWay}" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="1"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Art der maschinell- handbetätigten Fahrschachttüren:" />
                            <StackPanel
                                Grid.Row="3"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox
                                    Width="65"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_Zugangsstellen'].Value}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Margin="5,5,5,10"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="Stück" />
                                <TextBlock
                                    Margin="8,5,5,10"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text="Fabrikat:" />
                                <TextBox
                                    Width="250"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.DoorTyp}" />
                            </StackPanel>
                            <StackPanel Grid.Row="4" Grid.Column="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="65"
                                        Margin="0,0,5,10"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource BaseTextBlockStyle}"
                                        Text="Türbreite:" />
                                    <TextBox
                                        Width="100"
                                        Style="{StaticResource InfoTextboxStyle}"
                                        Text="{x:Bind ViewModel.ParameterDictionary['var_TB'].Value}"
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="5,5,5,10"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource BaseTextBlockStyle}"
                                        Text="mm" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Width="65"
                                        Margin="0,0,5,10"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource BaseTextBlockStyle}"
                                        Text="Türhöhe:" />
                                    <TextBox
                                        Width="100"
                                        Style="{StaticResource InfoTextboxStyle}"
                                        Text="{x:Bind ViewModel.ParameterDictionary['var_TH'].Value}"
                                        TextAlignment="Right" />
                                    <TextBlock
                                        Margin="5,5,5,10"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource BaseTextBlockStyle}"
                                        Text="mm" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="{x:Bind ViewModel.ViewingOpening}" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.RowSpan="6"
                                Grid.Column="3"
                                Orientation="Horizontal">
                                <StackPanel Margin="40,0,40,0">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Schutzraum Schachtgrube" />
                                    <Image
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Source="{x:Bind ViewModel.ProtectedSpaceTypPitImage, Mode=OneWay}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="{x:Bind ViewModel.ProtectedSpaceTypPitDescription, Mode=OneWay}" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="Schutzraum Schachtkopf" />
                                    <Image
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Source="{x:Bind ViewModel.ProtectedSpaceTypHeadImage, Mode=OneWay}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="{x:Bind ViewModel.ProtectedSpaceTypHeadDescription, Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <!--  3. Tragmittel  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="3. Tragmittel" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Anzahl und Art der Tragmittel:" />
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox
                                    Width="65"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_NumberOfRopes'].Value}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Width="25"
                                    Margin="5,0,5,5"
                                    VerticalAlignment="Center"
                                    Text="Stk" />
                                <TextBox
                                    Width="410"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_Tragseiltyp'].Value}" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Aufhängung des Fahrkorbes:" />
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Orientation="Horizontal">
                                <TextBox
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_AufhaengungsartRope'].Value}"
                                    TextAlignment="Right" />
                                <TextBlock
                                    Margin="5,0,5,12"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text=" : 1" />
                                <TextBlock
                                    Margin="5,0,5,12"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text=", des Gegengewichtes "
                                    Visibility="{x:Bind ViewModel.IsRopeLift}" />
                                <TextBox
                                    Style="{StaticResource InfoTextboxStyle}"
                                    Text="{x:Bind ViewModel.ParameterDictionary['var_AufhaengungsartRope'].Value}"
                                    TextAlignment="Right"
                                    Visibility="{x:Bind ViewModel.IsRopeLift}" />
                                <TextBlock
                                    Margin="5,0,5,12"
                                    VerticalAlignment="Bottom"
                                    Style="{StaticResource BaseTextBlockStyle}"
                                    Text=" : 1"
                                    Visibility="{x:Bind ViewModel.IsRopeLift}" />
                            </StackPanel>
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Anzahl und Art der gespannten - nicht gespannten Unterseile:" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="100"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="keine" />
                        </Grid>
                        <!--  4. Antrieb  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="4. Antrieb" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Art des Antriebs:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="500"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.DriveTyp}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Antriebsregelung:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="500"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.DriveControl}" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Aufstellung des Triebwerkes:" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                Width="500"
                                HorizontalAlignment="Left"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.DrivePosition}" />
                        </Grid>
                        <!--  5. Fahrkorb-Gegengewicht  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="5. Fahrkorb-Gegengewicht" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Fahrkorbgrundfläche:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_A_Kabine'].Value}"
                                TextAlignment="Right" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                VerticalAlignment="Center"
                                Text="m²" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Fahrkorbhöhe:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_KHLicht'].Value}"
                                TextAlignment="Right" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                VerticalAlignment="Center"
                                Text="mm" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Anzahl der Fahrkorbzugänge mit maschinell betätigter Fahrkorbtür:" />
                            <TextBox
                                Grid.Row="2"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.CarDoorCount}"
                                TextAlignment="Right" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                VerticalAlignment="Center"
                                Text="Stück" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Gewicht des Fahrkorbes:" />
                            <TextBox
                                Grid.Row="3"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_F'].Value}"
                                TextAlignment="Right" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                VerticalAlignment="Center"
                                Text="kg" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Gewicht des Gegengewichtes:" />
                            <TextBox
                                Grid.Row="4"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Gegengewichtsmasse'].Value}"
                                TextAlignment="Right" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                VerticalAlignment="Center"
                                Text="kg" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="0"
                                Margin="0,0,0,10"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Gewicht des Seilgewichtsausgleiches (Unterseil bzw. Seilausgleichskette):" />
                            <TextBlock
                                Grid.Row="5"
                                Grid.Column="1"
                                Margin="5,0,5,5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="---" />
                        </Grid>
                        <!--  6. Elektrische Ausrüstung  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="6. Elektrische Ausrüstung" />
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="250" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Spannung und Netzform des Anschlussnetzes:" />
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_Stromanschluss'].Value}" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Style="{StaticResource BodyStrongTextBlockStyle}"
                                Text="Nennstrom des Antriebsmotors:" />
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                HorizontalTextAlignment="Right"
                                Style="{StaticResource InfoTextboxStyle}"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_ZA_IMP_Motor_Ir'].Value}"
                                TextAlignment="Right" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="2"
                                Margin="5,0,5,5"
                                VerticalAlignment="Center"
                                Text="A" />
                        </Grid>
                        <!--  7. Liste der Sicherheitsbauteile  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="7. Liste der Sicherheitsbauteile" />
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Fangvorrichtung" />
                            <TextBlock Text="Türverschlüsse Schachttür" />
                            <TextBlock Text="Türverschlüsse Kabinentür" />
                            <TextBlock Text="Geschwindigkeitsbegenzer" />
                            <TextBlock Text="Fahrkorbpuffer" />
                            <TextBlock Text="Gegengewichtspuffer" />
                            <TextBlock Text="SaFÜ" />
                            <TextBlock Text="SaFÜ" />
                            <TextBlock Text="UCMP" />
                            <TextBlock Text="UCMP" />
                            <TextBlock Text="UCMP" />
                            <TextBlock
                                Margin="0,5,0,5"
                                FontSize="16"
                                Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                Text="Elektronische Sicherheitsschaltungen" />
                            <TextBlock Text="---" />
                            <TextBlock Text="---" />
                            <TextBlock Text="---" />
                        </StackPanel>
                        <!--  8. Besonderheiten der Aufzugsanlage  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="8. Besonderheiten der Aufzugsanlage" />
                        <TextBox
                            Grid.Column="0"
                            MinHeight="92"
                            Margin="5,0,5,0"
                            AcceptsReturn="True"
                            Text="{x:Bind ViewModel.LiftDocumentation.SpecialFeatures, Converter={StaticResource NewLineConveter}, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                        <!--  Anlagen  -->
                        <TextBlock
                            Margin="0,0,0,10"
                            FontSize="20"
                            Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                            Text="Anlagen:" />
                        <TextBlock Margin="0,0,0,10" FontSize="16">
                            <Run Text=" Der Montagebetrieb" /> <LineBreak />
                            <LineBreak />
                            <LineBreak />
                            <Run Text="Rieblingen, den " />
                            <Run Text="{x:Bind ViewModel.DateTimeNow}" />
                        </TextBlock>
                    </StackPanel>
                </Expander>
                <StackPanel
                    Grid.Column="0"
                    Margin="0,6,50,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button
                        Width="55"
                        Height="34"
                        Margin="0,0,5,0"
                        Command="{x:Bind ViewModel.CreatePdfCommand}">
                        <ToolTipService.ToolTip>
                            <TextBlock
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Create PDF" />
                        </ToolTipService.ToolTip>
                        <SymbolIcon Symbol="Print" />
                    </Button>
                    <Button Command="{x:Bind ViewModel.SaveAllParameterCommand}" Style="{StaticResource SaveButton}">
                        <ToolTipService.ToolTip>
                            <TextBlock
                                FontSize="14"
                                FontWeight="Bold"
                                Text="Save All Parameter" />
                        </ToolTipService.ToolTip>
                        <SymbolIcon Symbol="Save" />
                    </Button>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <!--  InfoSidebarPanel  -->
        <SpeziControls:SidebarPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="5,0,0,0"
            InfoText="{x:Bind ViewModel.InfoSidebarPanelText, Mode=TwoWay}"
            ShowQuickLinks="{x:Bind ViewModel.AuftragsbezogeneXml, Mode=OneWay}" />
        <!--  Footer  -->
        <SpeziControls:FooterControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0"
            CheckOut="{x:Bind ViewModel.CheckOut, Mode=OneWay}"
            ErrorsDictionary="{x:Bind ViewModel.ParameterErrorDictionary, Mode=TwoWay}"
            HasErrors="{x:Bind ViewModel.HasErrors, Mode=OneWay}"
            HideInfoErrors="{x:Bind ViewModel.HideInfoErrors, Mode=TwoWay}"
            ParameterFound="{x:Bind ViewModel.ParameterDictionary.Count, Mode=OneWay}"
            XmlPath="{x:Bind ViewModel.FullPathXml, Mode=OneWay}" />
    </Grid>
</Page>
