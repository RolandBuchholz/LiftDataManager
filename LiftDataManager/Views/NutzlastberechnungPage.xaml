                        Visibility="{x:Bind ViewModel.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="14"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.TuerbreiteC, Mode=OneWay}"
