                    <TextBlock
                        Grid.Row="13"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.ZugangC, Mode=OneWay}">
                        <Run Text="{x:Bind ViewModel.TuertypC, Mode=OneWay}" />
                        <Run Text="{x:Bind ViewModel.TuerbezeichnungC, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="14"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
