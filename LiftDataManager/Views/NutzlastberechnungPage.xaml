                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="2"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="kg" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Center"
                        Foreground="{x:Bind ViewModel.ErgebnisNennlastColor, Mode=OneWay}"
