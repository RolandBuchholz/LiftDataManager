                        Grid.Row="7"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.ZugangA, Mode=OneWay}" />
                    <!--  ZugangB  -->
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Zugang B"
                        Visibility="{x:Bind ViewModel.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.ZugangB, Mode=OneWay}">
                        <Run Text="{x:Bind ViewModel.TuertypB, Mode=OneWay}" />
                        <Run Text="{x:Bind ViewModel.TuerbezeichnungB, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türbreite"
