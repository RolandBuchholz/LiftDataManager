                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türeinbaumaß"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangA, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TuerEinbau'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangA, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangA, Mode=OneWay}" />
                    <!--  ZugangB  -->
                    <TextBlock
                        Grid.Row="8"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Zugang B"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="9"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}">
                        <Run Text="{x:Bind ViewModel.ParamterDictionary['var_Tuertyp_B'].Value, Mode=OneWay}" />
                        <Run Text="{x:Bind ViewModel.ParamterDictionary['var_Tuerbezeichnung_B'].Value, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türbreite"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TB_B'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="10"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="11"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türeinbaumaß"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="11"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TuerEinbauB'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="11"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <!--  ZugangC  -->
                    <TextBlock
                        Grid.Row="12"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Zugang C"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="13"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}">
                        <Run Text="{x:Bind ViewModel.ParamterDictionary['var_Tuertyp_C'].Value, Mode=OneWay}" />
                        <Run Text="{x:Bind ViewModel.ParamterDictionary['var_Tuerbezeichnung_C'].Value, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="14"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türbreite"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="14"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TB_C'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="14"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="15"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türeinbaumaß"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="15"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TuerEinbauC'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="15"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <!--  ZugangD  -->
                    <TextBlock
                        Grid.Row="16"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Zugang D"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="17"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}">
                        <Run Text="{x:Bind ViewModel.ParamterDictionary['var_Tuertyp_D'].Value, Mode=OneWay}" />
                        <Run Text="{x:Bind ViewModel.ParamterDictionary['var_Tuerbezeichnung_D'].Value, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="18"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türbreite"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="18"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TB_D'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="18"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="19"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Türeinbaumaß"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="19"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.ParamterDictionary['var_TuerEinbauD'].Value, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="19"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="mm"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                </Grid>
                <!--  Nutzfläche  -->
                <Grid
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="20,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" MinWidth="150" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        FontSize="18"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Kabinen Nutzfläche" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Fahrkorbfläche" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NutzflaecheKabine, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="m²" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangA, Mode=OneWay}">
                        Fläche Zugang A*<Run Text="{x:Bind ViewModel.InfoZugangA, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NutzflaecheZugangA, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangA, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="m²"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangA, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}">
                        Fläche Zugang B*<Run Text="{x:Bind ViewModel.InfoZugangB, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NutzflaecheZugangB, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="m²"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangB, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}">
                        Fläche Zugang C*<Run Text="{x:Bind ViewModel.InfoZugangC, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NutzflaecheZugangC, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="4"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="m²"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangC, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}">
                        Fläche Zugang D*<Run Text="{x:Bind ViewModel.InfoZugangD, Mode=OneWay}" />
                    </TextBlock>
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NutzflaecheZugangD, Mode=OneWay}"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="5"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="m²"
                        Visibility="{x:Bind ViewModel.PayLoadResult.ZugangD, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Fahrkorbfläche Gesamt" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NutzflaecheGesamt, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="6"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
                        Text="m²" />
                    <TextBlock
                        Grid.Row="7"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        MaxWidth="400"
                        Margin="0,5,0,0"
                        FontSize="12"
                        Style="{StaticResource BodyTextStyle}"
                        TextWrapping="WrapWholeWords">
                        * 5.4.2.1.3<LineBreak />
                        <Run FontSize="10" Text="a) Flächen mit einer Tiefe zu einem Türblatt von 100 mm oder weniger (einschließlich schneller und langsamer Türblätter bei mehrblättrigen Türen) dürfen bei der Grundfläche nicht berücksichtigt werden." /><LineBreak />
                        <Run FontSize="10" Text="b) Bei Flächen, die mehr als 100 mm tief sind, muss die gesamte Nutzfläche der Türen zur Grundfläche hinzugefügt werden." />
                        <Run FontSize="10" Text="Info: Bei Türbreite gleich Kabinenbreite wird die gesamte Nutzfläche der Türen zur Grundfläche hinzugefügt werden " />
                    </TextBlock>
                </Grid>
                <!--  Nutzlast  -->
                <Grid
                    Grid.Row="3"
                    Grid.Column="0"
                    Margin="20,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" MinWidth="150" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,0,0,5"
                        FontSize="18"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Nennlast und größte Nutzfläche des Fahrkorbs" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"
                        Margin="0,0,0,0"
                        FontSize="13"
                        Style="{StaticResource BodyTextStyle}"
                        Text="Nutzfläche des Fahrkorbs für Personenaufzüge" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Style="{StaticResource BodyTextStyle}"
                        Text="minimale Nennlast (Tabelle 6)" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource BodyTextStyle}"
                        Text="{x:Bind ViewModel.PayLoadResult.NennLastTabelle6, Mode=OneWay}" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BodyTextStyle}"
