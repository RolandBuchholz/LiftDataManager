<Page
    x:Class="LiftDataManager.Views.TabellenansichtPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:LiftDataManager.Core.Models"
    xmlns:speziControls="using:LiftDataManager.Controls"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Page.Resources>
        <speziControls:ParameterControlTemplateSelector
            x:Key="controlTemplateSelector"
            BooleanTemplate="{StaticResource GridParameterTypBoolean}"
            DateTemplate="{StaticResource GridParameterTypDate}"
            DefaultTemplate="{StaticResource GridParameterTypDefault}"
            DropDownList="{StaticResource GridParameterTypDropDownList}"
            NumberOnlyTemplate="{StaticResource GridParameterTypNumberOnly}"
            StringTemplate="{StaticResource GridParameterTypString}" />
    </Page.Resources>
    <Grid
        x:Name="ContentAreaTabelle"
        Margin="5"
        Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}"
        CornerRadius="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  CommandBar  -->
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Height="52"
                Margin="0,0,0,5"
                HorizontalAlignment="Stretch"
                Background="{StaticResource SystemAltMediumColor}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <CommandBar
                        VerticalAlignment="Center"
                        Background="Transparent"
                        DefaultLabelPosition="Right">
                        <AppBarButton Icon="Filter" Label="{x:Bind ViewModel.FilterValue, Mode=OneWay}">
                            <ToolTipService.ToolTip>
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="Aktueller Filter:" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        Foreground="DarkRed"
                                        Text="{x:Bind ViewModel.FilterValue, Mode=OneWay}" />
                                </StackPanel>
                            </ToolTipService.ToolTip>
                            <AppBarButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        x:Name="FilterNone"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="None"
                                        Text="Kein Filter" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        x:Name="FilterString"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Text"
                                        Text="Text Parameter" />
                                    <MenuFlyoutItem
                                        x:Name="FilterNumber"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="NumberOnly"
                                        Text="Nummer Parameter" />
                                    <MenuFlyoutItem
                                        x:Name="FilterDate"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Date"
                                        Text="Datums Parameter" />
                                    <MenuFlyoutItem
                                        x:Name="FilterBoolean"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Boolean"
                                        Text="Wahr-Falsch Parameter" />
                                    <MenuFlyoutItem
                                        x:Name="FilterDropDownList"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="DropDownList"
                                        Text="Auswahllisten Parameter" />
                                    <MenuFlyoutSeparator />
                                    <MenuFlyoutItem
                                        x:Name="FilterAllgemeineDaten"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="AllgemeineDaten"
                                        Text="Allgemeine Daten" />
                                    <MenuFlyoutItem
                                        x:Name="FilterSchacht"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Schacht"
                                        Text="Schacht" />
                                    <MenuFlyoutItem
                                        x:Name="FilterBausatz"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Bausatz"
                                        Text="Bausatz" />
                                    <MenuFlyoutItem
                                        x:Name="FilterFahrkorb"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Fahrkorb"
                                        Text="Fahrkorb" />
                                    <MenuFlyoutItem
                                        x:Name="FilterTueren"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Tueren"
                                        Text="Türen" />
                                    <MenuFlyoutItem
                                        x:Name="FilterAntriebSteuerungNotruf"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="AntriebSteuerungNotruf"
                                        Text="Antrieb/Steuerung/Notruf" />
                                    <MenuFlyoutItem
                                        x:Name="FilterSignalisation"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Signalisation"
                                        Text="Signalisation" />
                                    <MenuFlyoutItem
                                        x:Name="FilterWartung"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Wartung"
                                        Text="Wartung" />
                                    <MenuFlyoutItem
                                        x:Name="FilterMontageTUEV"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="MontageTUEV"
                                        Text="Montage/TÜV" />
                                    <MenuFlyoutItem
                                        x:Name="FilterRWA"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="RWA"
                                        Text="Rauch- und Wärmeabzugsanlage" />
                                    <MenuFlyoutItem
                                        x:Name="FilterSonstiges"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="Sonstiges"
                                        Text="Sonstiges" />
                                    <MenuFlyoutItem
                                        x:Name="FilterKommentareVault"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="KommentareVault"
                                        Text="Kommentare im Vault" />
                                    <MenuFlyoutItem
                                        x:Name="FilterCFP"
                                        Command="{x:Bind ViewModel.SetParameterFilter}"
                                        CommandParameter="CFP"
                                        Text="Car Frame Programm" />
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                        <AppBarButton Icon="AllApps" Label="{x:Bind ViewModel.GroupingValue, Mode=OneWay}">
                            <ToolTipService.ToolTip>
                                <StackPanel>
                                    <TextBlock HorizontalAlignment="Center" Text="Aktuelle Gruppierung:" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="16"
                                        Foreground="DarkRed"
                                        Text="{x:Bind ViewModel.GroupingValue, Mode=OneWay}" />
                                </StackPanel>
                            </ToolTipService.ToolTip>
                            <AppBarButton.Flyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        x:Name="Alphabetisch"
                                        Command="{x:Bind ViewModel.GroupParameter}"
                                        CommandParameter="abc"
                                        Text="Alphabetisch" />
                                    <MenuFlyoutItem
                                        x:Name="Parametertyp"
                                        Command="{x:Bind ViewModel.GroupParameter}"
                                        CommandParameter="typ"
                                        Text="Parametertyp" />
                                    <MenuFlyoutItem
                                        x:Name="Parameterkategorie"
                                        Command="{x:Bind ViewModel.GroupParameter}"
                                        CommandParameter="cat"
                                        Text="Parameterkategorie" />
                                </MenuFlyout>
                            </AppBarButton.Flyout>
                        </AppBarButton>
                    </CommandBar>
                    <AutoSuggestBox
                        MinWidth="250"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        QueryIcon="Find"
                        Text="{x:Bind ViewModel.SearchInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <CommandBar
                    Grid.Column="1"
                    Background="Transparent"
                    DefaultLabelPosition="Right">
                    <AppBarButton
                        Command="{x:Bind ViewModel.ShowAllParameters}"
                        Icon="AllApps"
                        Label="All"
                        ToolTipService.ToolTip="Zeige alle Parameter an"
                        Visibility="{x:Bind ViewModel.IsUnsavedParametersSelected, Mode=OneWay}" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.ShowUnsavedParameters}"
                        Icon="Sync"
                        IsEnabled="True"
                        Label="Unsaved"
                        ToolTipService.ToolTip="Zeige nicht gespeicherte Parameter an" />
                    <AppBarButton
                        Command="{x:Bind ViewModel.SaveAllSpeziParametersAsync}"
                        Icon="Save"
                        IsEnabled="True"
                        Label="Save"
                        ToolTipService.ToolTip="Speichere alle Parameter" />
                </CommandBar>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Margin="10,5,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid Margin="0,0,5,0" CornerRadius="8">
                <controls:DataGrid
                    AlternatingRowBackground="{ThemeResource SystemControlPageBackgroundListLowBrush}"
                    AutoGenerateColumns="False"
                    Background="{ThemeResource SystemChromeMediumColor}"
                    CanUserReorderColumns="True"
                    CanUserResizeColumns="True"
                    GridLinesVisibility="All"
                    ItemsSource="{x:Bind ViewModel.GroupedItems.View, Mode=OneWay}"
                    LoadingRowGroup="DataGrid_LoadingRowGroup"
                    RowGroupHeaderPropertyNameAlternative="">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTemplateColumn Header="Symbol">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <FontIcon
                                        HorizontalAlignment="Center"
                                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                        Glyph="{Binding Symbol}" />
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTextColumn
                            Binding="{Binding Name}"
                            Header="Parametername"
                            IsReadOnly="True" />
                        <controls:DataGridTextColumn
                            Binding="{Binding TypeCode}"
                            Header="VariablenTyp"
                            IsReadOnly="True" />
                        <controls:DataGridTextColumn
                            Binding="{Binding ParameterCategory}"
                            Header="Kategorie"
                            IsReadOnly="True" />
                        <controls:DataGridTemplateColumn Header="Parameterwert">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ContentControl
                                        Margin="5,2,5,2"
                                        HorizontalContentAlignment="Stretch"
                                        Content="{Binding}"
                                        ContentTemplateSelector="{StaticResource controlTemplateSelector}" />
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridCheckBoxColumn
                            Width="45"
                            Binding="{Binding IsKey}"
                            HeaderStyle="{StaticResource SymbolHeaderKey}" />
                        <controls:DataGridTemplateColumn Header="Kommentar">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate x:DataType="models:Parameter">
                                    <StackPanel>
                                        <TextBox
                                            HorizontalAlignment="Stretch"
                                            AcceptsReturn="True"
                                            Style="{StaticResource GridTextboxStyle}"
                                            Text="{x:Bind Comment, Mode=TwoWay}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
            </Grid>
            <!--  InfoSidebarPanel  -->
            <speziControls:SidebarPanel
                Grid.Column="1"
                Margin="0"
                InfoText="{x:Bind ViewModel.InfoSidebarPanelText, Mode=TwoWay}" />
        </Grid>
        <!--  Footer  -->
        <speziControls:FooterControl
            Grid.Row="2"
            Margin="0"
            CheckOut="{x:Bind ViewModel.CheckOut, Mode=OneWay}"
            ParameterFound="{x:Bind ViewModel.ParameterFound, Mode=OneWay}"
            XmlPath="{x:Bind ViewModel.FullPathXml, Mode=OneWay}" />

    </Grid>
</Page>
