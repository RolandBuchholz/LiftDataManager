<Page
    x:Class="LiftDataManager.Views.SchachtDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:SpeziControls="using:LiftDataManager.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:LiftDataManager.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skiasharp="using:SkiaSharp.Views.Windows"
    xmlns:wuc="using:WinUICommunity"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Grid.Column="0">
            <skiasharp:SKXamlCanvas
                x:Name="xamlCanvas"
                Width="{x:Bind ViewModel.ViewBoxWidth, Mode=OneWay}"
                Height="{x:Bind ViewModel.ViewBoxHeight, Mode=OneWay}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IgnorePixelScaling="True">
                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="PaintSurface">
                        <Core:InvokeCommandAction Command="{x:Bind ViewModel.PaintSurfaceCommand}" />
                        <Core:InvokeCommandAction Command="{x:Bind ViewModel.LoadedSKXamlCanvasCommand}" CommandParameter="{Binding ElementName=xamlCanvas}" />
                    </Core:EventTriggerBehavior>
                </Interactivity:Interaction.Behaviors>
            </skiasharp:SKXamlCanvas>
        </Viewbox>
        <ScrollViewer
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Padding="0,0,5,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <wuc:Divider
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,5,0"
                    VerticalAlignment="Top"
                    Content="Schachtabmessungen"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStroke="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStrokeThickness="2" />
                <Grid
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,0,5"
                    Padding="5"
                    Style="{ThemeResource GridPanel}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <SpeziControls:ParameterCheckBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        IsEnabled="False"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_A'], Mode=TwoWay}"
                        ShowDefaultCheckBoxContent="True" />
                    <SpeziControls:ParameterCheckBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_B'], Mode=TwoWay}"
                        ShowDefaultCheckBoxContent="True" />
                    <SpeziControls:ParameterCheckBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_C'], Mode=TwoWay}"
                        ShowDefaultCheckBoxContent="True" />
                    <SpeziControls:ParameterCheckBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_D'], Mode=TwoWay}"
                        ShowDefaultCheckBoxContent="True" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_SB'], Mode=TwoWay}"
                        PlaceholderText="Schachtbreite"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ST'], Mode=TwoWay}"
                        PlaceholderText="Schachttiefe"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                </Grid>
                <wuc:Divider
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,5"
                    VerticalAlignment="Top"
                    Content="Maueröffnungen"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStroke="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStrokeThickness="2" />
                <Grid
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,5"
                    Padding="5"
                    Style="{ThemeResource GridPanel}"
                    Visibility="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_A'].Value, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungBreiteA'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungHoeheA'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungAbstandA'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                </Grid>
                <Grid
                    Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,5"
                    Padding="5"
                    Style="{ThemeResource GridPanel}"
                    Visibility="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_B'].Value, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungBreiteB'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungHoeheB'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungAbstandB'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                </Grid>
                <Grid
                    Grid.Row="5"
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,5"
                    Padding="5"
                    Style="{ThemeResource GridPanel}"
                    Visibility="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_C'].Value, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungBreiteC'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungHoeheC'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungAbstandC'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                </Grid>
                <Grid
                    Grid.Row="6"
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,5"
                    Padding="5"
                    Style="{ThemeResource GridPanel}"
                    Visibility="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_D'].Value, Mode=OneWay, Converter={StaticResource StringToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungBreiteD'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungHoeheD'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                    <SpeziControls:ParameterNumberTextBox
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="0,5,5,0"
                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_MauerOeffnungAbstandD'], Mode=TwoWay}"
                        ShowDefaultHeader="True"
                        Unit="mm" />
                </Grid>
                <wuc:Divider
                    Grid.Row="7"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,0,10,5"
                    VerticalAlignment="Top"
                    Content="Kabinendaten"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStroke="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStrokeThickness="2" />
            </Grid>
        </ScrollViewer>
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,10,10,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <wuc:Divider
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="0,5,0,0"
                    VerticalAlignment="Top"
                    Content="Berechnente Werte"
                    FontSize="22"
                    FontWeight="Bold"
                    Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStroke="{ThemeResource AccentTextFillColorPrimaryBrush}"
                    LineStrokeThickness="2" />
            </Grid>
        </Grid>
    </Grid>
</Page>
