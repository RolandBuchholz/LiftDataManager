                        x:Name="ico_NameError"
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Foreground="Red"
                        Glyph="&#xE946;"
                        Visibility="Collapsed">
                        <ToolTipService.ToolTip>
                            <TextBlock Foreground="Red" Text="* Pflichteingabe" />
                        </ToolTipService.ToolTip>
                    </FontIcon>
                </Grid>
                <TextBox
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="3"
                    PlaceholderText="Vorname"
                    Text="{x:Bind ViewModel.FirstName, Mode=TwoWay}" />
