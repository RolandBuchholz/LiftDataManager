<Page
    x:Class="LiftDataManager.Views.AllgemeineDatenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SpeziControls="using:LiftDataManager.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:LiftDataManager.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.UI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI.UI"
    mc:Ignorable="d">

    <Page.Resources>
        <media:AttachedCardShadow
            x:Key="CommonShadow"
            CornerRadius="5"
            Offset="5" />
        <converters:BoolToObjectConverter
            x:Key="InvertBoolToObjectConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <helpers:StringToBoolConverter x:Key="StringToBoolConverter" />
        <helpers:ExcelDateToDateTimeOffsetConverter x:Name="ExcelDate" />
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <!--  Parameter  -->
        <ScrollViewer
            Grid.Row="0"
            Margin="0,0,0,0"
            Padding="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Expander
                    x:Name="KontaktdatenAnsprechpartner"
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Header="Kontaktdaten Ansprechpartner"
                    IsExpanded="True"
                    Style="{StaticResource ExpanderContentStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml" />
                        </Grid.Resources>
                        <Border
                            Grid.RowSpan="3"
                            ui:Effects.Shadow="{StaticResource CommonShadow}"
                            Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                        <Border
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            ui:Effects.Shadow="{StaticResource CommonShadow}"
                            Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            MinHeight="92"
                            Margin="5,5,10,5"
                            AcceptsReturn="True"
                            Header="Bauvorhaben"
                            PlaceholderText="Bauvorhaben"
                            Text="{x:Bind ViewModel.ParamterDictionary['var_Projekt'].Value, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            MinHeight="92"
                            Margin="5,5,10,5"
                            AcceptsReturn="True"
                            Header="Betreiber"
                            PlaceholderText="Betreiber"
                            Text="{x:Bind ViewModel.ParamterDictionary['var_Betreiber'].Value, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Orientation="Vertical">
                            <TextBlock Margin="10,3,5,7" Text="Firma Auftraggeber" />
                            <TextBlock Margin="10,3,5,7" Text="Name Auftraggeber" />
                            <TextBlock Margin="10,3,5,7" Text="Straße Hausnummer" />
                            <TextBlock Margin="10,3,5,7" Text="Postleitzahl Ort" />
                            <TextBlock Margin="10,3,5,7" Text="Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Adresse Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Telefon Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Mobiltelefon Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Email Fachplaner" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Orientation="Vertical">
                            <TextBox
                                Margin="5,5,10,0"
                                PlaceholderText="Firma Auftraggeber"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_Firma'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                PlaceholderText="Name Auftraggeber"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonZ1'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                PlaceholderText="Straße Hausnummer"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonZ2'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                PlaceholderText="Postleitzahl Ort"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonZ3'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                PlaceholderText="Fachplaner"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonZ4'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                PlaceholderText="Adresse Fachplaner"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_FP_Adresse'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                ui:TextBoxExtensions.Regex="^\s*\+?\s*([0-9][\s-]*){9,}$"
                                PlaceholderText="Telefon Fachplaner"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonPhone'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                ui:TextBoxExtensions.Regex="^\s*\+?\s*([0-9][\s-]*){9,}$"
                                PlaceholderText="Mobiltelefon Fachplaner"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonMobil'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                ui:TextBoxExtensions.ValidationType="Email"
                                PlaceholderText="Email Fachplaner"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_AnPersonMail'].Value, Mode=TwoWay}" />
                        </StackPanel>
                    </Grid>
                </Expander>
                <Button
                    Grid.Column="0"
                    Margin="0,6,50,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{x:Bind ViewModel.SaveAllParameterCommand}"
                    Style="{StaticResource SaveButton}">
                    <ToolTipService.ToolTip>
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="Save All Parameter" />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Save" />
                </Button>
                <Expander
                    x:Name="AllgemeineDaten"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    Header="Allgemeine Aufzugsdaten"
                    IsExpanded="True"
                    Style="{StaticResource ExpanderContentStyle}">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                        <Grid x:Name="Termine" Grid.Row="0">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,10">
                                <Border
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Termine" />
                                <Grid
                                    x:Name="Allgemein0"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*,*">
                                    <CalendarDatePicker
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="center"
                                        CalendarIdentifier="GregorianCalendar"
                                        Date="{x:Bind ViewModel.ParamterDictionary['var_FreigabeErfolgtAm'].Value, Converter={StaticResource ExcelDate}, Mode=TwoWay}"
                                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                        Header="Freigabe erfolgt am"
                                        Language="de"
                                        PlaceholderText="Datum auswählen" />
                                    <CalendarDatePicker
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="center"
                                        CalendarIdentifier="GregorianCalendar"
                                        Date="{x:Bind ViewModel.ParamterDictionary['var_Demontage'].Value, Converter={StaticResource ExcelDate}, Mode=TwoWay}"
                                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                        Header="Demontage"
                                        Language="de"
                                        PlaceholderText="Datum auswählen" />
                                    <CalendarDatePicker
                                        Grid.Column="2"
                                        Margin="5,-4,5,-4"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        CalendarIdentifier="GregorianCalendar"
                                        Date="{x:Bind ViewModel.ParamterDictionary['var_AuslieferungAm'].Value, Converter={StaticResource ExcelDate}, Mode=TwoWay}"
                                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                        Header="Auslieferung"
                                        Language="de"
                                        PlaceholderText="Datum auswählen" />
                                    <CalendarDatePicker
                                        Grid.Column="3"
                                        Margin="5,-4,5,-4"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        CalendarIdentifier="GregorianCalendar"
                                        Date="{x:Bind ViewModel.ParamterDictionary['var_FertigstellungAm'].Value, Converter={StaticResource ExcelDate}, Mode=TwoWay}"
                                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                        Header="Fertigstellung"
                                        Language="de"
                                        PlaceholderText="Datum auswählen" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="GrundDaten"
                            Grid.Row="1"
                            Margin="0,0,0,5">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,10">
                                <Border
                                    Grid.RowSpan="3"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.RowSpan="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Grundinformationen" />
                                <Grid
                                    x:Name="Allgemein1"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*">
                                    <ComboBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Header="Lieferart"
                                        ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Lieferart'].DropDownList, Mode=OneWay}"
                                        SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Lieferart'].DropDownListValue, Mode=TwoWay}" />
                                    <ComboBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Header="Information Aufzugsanlage"
                                        ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_InformationAufzug'].DropDownList, Mode=OneWay}"
                                        SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_InformationAufzug'].DropDownListValue, Mode=TwoWay}">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                <Run
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Text="Neuanlage:" />
                                                <LineBreak />
                                                Neue Aufzugsanlage in neuen Schacht.<LineBreak />
                                                Die Fabriknummer entspricht unserer<LineBreak />
                                                Auftragsnummer.<LineBreak />
                                                <Run
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Text="Umbau:" />
                                                <LineBreak />
                                                Umbau bzw. Modernisierung einer bestehenden<LineBreak />
                                                Aufzugsanlage,also Ersatz einzelner Komponenten.<LineBreak />
                                                Die alte Fabriknummer bleibt bestehen.<LineBreak />
                                                <Run
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Text="Ersatzanlage:" />
                                                <LineBreak />
                                                Neuer Aufzug in bestehenden Schacht<LineBreak />
                                                in dem vorher schon ein Aufzug war.<LineBreak />
                                                Die Fabriknummer entspricht unserer<LineBreak />
                                                Auftragsnummer,die alte Fabriknummer<LineBreak />
                                                muss angegeben werden damit der<LineBreak />
                                                TÜV die ausgebaute Anlage austragen kann.</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </ComboBox>
                                    <TextBox
                                        Grid.Column="2"
                                        Margin="5,0,5,0"
                                        Header="Fabriknummer Bestandsanlage"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_FabriknummerBestand'].Value, Mode=TwoWay}">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                Fabriknummer der alten Bestandsanlage<LineBreak />
                                                Wird bei einer Ersatzanlage benötigt.</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </TextBox>
                                </Grid>
                                <Grid
                                    x:Name="Allgemein2"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <ComboBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Header="Gebäudetyp"
                                        ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Gebaeudetyp'].DropDownList, Mode=OneWay}"
                                        SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Gebaeudetyp'].DropDownListValue, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        Header="Gebäudetyp Zusatzinformationen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_FE_Gebaeude'].Value, Mode=TwoWay}" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="Anlagedaten"
                            Grid.Row="2"
                            Margin="0,0,0,5">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,10">
                                <Border
                                    Grid.RowSpan="7"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.RowSpan="6"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Anlagedaten" />
                                <Grid
                                    x:Name="Allgemein3"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <ComboBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Header="Aufzugstyp"
                                        ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Aufzugstyp'].DropDownList, Mode=OneWay}"
                                        SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Aufzugstyp'].DropDownListValue, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        Header="Aufzugstyp Zusatzinformationen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_FE_Aufzugstyp'].Value, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein4"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <ComboBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Center"
                                        Header="Aufzugstyp"
                                        ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Beladegeraet'].DropDownList, Mode=OneWay}"
                                        SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Beladegeraet'].DropDownListValue, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        Header="Aufzugstyp Zusatzinformationen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_FE_Beladegeraete'].Value, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein5"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*,*">
                                    <TextBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Decimal"
                                        Header="Nutzlast Q [kg]"
                                        PlaceholderText="Q"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_Q'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Decimal"
                                        Header="reduzierte Nutzlast Q' [kg]"
                                        PlaceholderText="Q'"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_Q1'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="2"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Decimal"
                                        Header="Fahrkorbgewicht F [kg]"
                                        PlaceholderText="F"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_F'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="3"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Number"
                                        Header="Personenanzahl"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_Personen'].Value, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein6"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,2*">
                                    <TextBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Decimal"
                                        Header="Nenngeschwindigkeit v [m/s]"
                                        PlaceholderText="v"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_v'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Decimal"
                                        Header="Förderhöhe FH [m]"
                                        PlaceholderText="FH"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_FH'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="2"
                                        Margin="5,0,5,0"
                                        Header="Förderhöhe Zusatzinformationen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_FE_FH'].Value, Mode=TwoWay}" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein7"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="2*,2*,*,*,*,*">
                                    <TextBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Number"
                                        Header="Anzahl Haltestellen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_Haltestellen'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Number"
                                        Header="Anzahl Zugangsstellen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_Zugangsstellen'].Value, Mode=TwoWay}" />
                                    <CheckBox
                                        Grid.Column="2"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Bottom"
                                        Content="Zugang A"
                                        IsChecked="{x:Bind ViewModel.ParamterDictionary['var_ZUGANSSTELLEN_A'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}"
                                        IsEnabled="False">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </CheckBox>
                                    <CheckBox
                                        Grid.Column="3"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Bottom"
                                        Content="Zugang B"
                                        IsChecked="{x:Bind ViewModel.ParamterDictionary['var_ZUGANSSTELLEN_B'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </CheckBox>
                                    <CheckBox
                                        Grid.Column="4"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Bottom"
                                        Content="Zugang C"
                                        IsChecked="{x:Bind ViewModel.ParamterDictionary['var_ZUGANSSTELLEN_C'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </CheckBox>
                                    <CheckBox
                                        Grid.Column="5"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Bottom"
                                        Content="Zugang D"
                                        IsChecked="{x:Bind ViewModel.ParamterDictionary['var_ZUGANSSTELLEN_D'].Value, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </CheckBox>
                                </Grid>
                                <Grid
                                    x:Name="Allgemein8"
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <TextBox
                                        Grid.Column="0"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Number"
                                        Header="Anzahl Aussenhaltestellen"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_Aussenhaltestellen'].Value, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Number"
                                        Header="max Fahrten pro Stunde"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_maxFahrtenStunde'].Value, Mode=TwoWay}" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="Normen"
                            Grid.Row="3"
                            Margin="0,0,0,5">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,10">
                                <Border
                                    Grid.RowSpan="3"
