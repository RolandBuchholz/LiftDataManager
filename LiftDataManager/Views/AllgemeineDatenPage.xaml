                    Grid.Row="4"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="3"
                    HorizontalAlignment="Stretch"
                    DisplayMemberPath="Name"
                    ItemsSource="{x:Bind ViewModel.Countrys, Mode=OneWay}"
                    PlaceholderText="Land"
                    SelectedValue="{x:Bind ViewModel.SelectedCountry, Mode=TwoWay}" />
                <Grid
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3">
