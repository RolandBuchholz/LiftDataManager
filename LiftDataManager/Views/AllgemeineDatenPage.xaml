                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox
                        x:Name="txb_Street"
                        Grid.Column="0"
                        Margin="3"
                        HorizontalAlignment="Stretch"
                        PlaceholderText="Straßenname"
                        Text="{x:Bind ViewModel.Street, Mode=TwoWay}" />
