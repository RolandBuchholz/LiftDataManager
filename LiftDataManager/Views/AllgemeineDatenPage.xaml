<Page
    x:Class="LiftDataManager.Views.AllgemeineDatenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SpeziControls="using:LiftDataManager.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:LiftDataManager.Helpers"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:triggers="using:CommunityToolkit.WinUI"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Page.Resources>
        <media:AttachedCardShadow
            x:Key="CommonShadow"
            CornerRadius="5"
            Offset="5" />
        <converters:BoolToObjectConverter
            x:Key="InvertBoolToObjectConverter"
            FalseValue="Visible"
            TrueValue="Collapsed" />
        <helpers:NewLineConveter x:Key="NewLineConveter" />
        <helpers:AutoSuggestionChosenParameterConverter x:Key="AutoSuggestionChosenParameterConverter" />
    </Page.Resources>
    <Grid x:Name="ContentArea">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <!--  Parameter  -->
        <ScrollViewer
            Grid.Row="0"
            Margin="0,0,0,0"
            Padding="0,0,15,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Expander
                    x:Name="KontaktdatenAnsprechpartner"
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    Header="Kontaktdaten Ansprechpartner"
                    IsExpanded="True"
                    Style="{StaticResource ExpanderContentStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <ResourceDictionary Source="ms-appx:///Microsoft.UI.Xaml/DensityStyles/Compact.xaml" />
                        </Grid.Resources>
                        <Border
                            Grid.RowSpan="3"
                            ui:Effects.Shadow="{StaticResource CommonShadow}"
                            Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                        <Border
                            Grid.RowSpan="3"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            ui:Effects.Shadow="{StaticResource CommonShadow}"
                            Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                        <TextBox
                            Grid.Row="0"
                            Grid.Column="0"
                            MinHeight="92"
                            Margin="5,5,10,5"
                            AcceptsReturn="True"
                            Header="Bauvorhaben"
                            PlaceholderText="Bauvorhaben"
                            Text="{x:Bind ViewModel.ParameterDictionary['var_Projekt'].Value, Converter={StaticResource NewLineConveter}, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                        <TextBox
                            Grid.Row="1"
                            Grid.Column="0"
                            MinHeight="92"
                            Margin="5,5,10,5"
                            AcceptsReturn="True"
                            Header="Betreiber"
                            PlaceholderText="Betreiber"
                            Text="{x:Bind ViewModel.ParameterDictionary['var_Betreiber'].Value, Converter={StaticResource NewLineConveter}, Mode=TwoWay}"
                            TextWrapping="Wrap" />
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="1"
                            Orientation="Vertical">
                            <TextBlock Margin="10,3,5,7" Text="Firma Auftraggeber" />
                            <TextBlock Margin="10,3,5,7" Text="Name Auftraggeber" />
                            <TextBlock Margin="10,3,5,7" Text="Straße Hausnummer" />
                            <TextBlock Margin="10,3,5,7" Text="Postleitzahl Ort" />
                            <TextBlock Margin="10,3,5,7" Text="Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Adresse Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Telefon Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Mobiltelefon Fachplaner" />
                            <TextBlock Margin="10,3,5,7" Text="Email Fachplaner" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Orientation="Vertical">
                            <TextBox Margin="5,5,10,0" Text="{x:Bind ViewModel.ParameterDictionary['var_Firma'].Value, Mode=TwoWay}" />
                            <TextBox Margin="5,5,10,0" Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonZ1'].Value, Mode=TwoWay}" />
                            <TextBox Margin="5,5,10,0" Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonZ2'].Value, Mode=TwoWay}" />
                            <TextBox Margin="5,5,10,0" Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonZ3'].Value, Mode=TwoWay}" />
                            <TextBox Margin="5,5,10,0" Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonZ4'].Value, Mode=TwoWay}" />
                            <TextBox Margin="5,5,10,0" Text="{x:Bind ViewModel.ParameterDictionary['var_FP_Adresse'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                ui:TextBoxExtensions.Regex="^\s*\+?\s*([0-9][\s-]*){9,}$"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonPhone'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                ui:TextBoxExtensions.Regex="^\s*\+?\s*([0-9][\s-]*){9,}$"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonMobil'].Value, Mode=TwoWay}" />
                            <TextBox
                                Margin="5,5,10,0"
                                ui:TextBoxExtensions.ValidationType="Email"
                                Text="{x:Bind ViewModel.ParameterDictionary['var_AnPersonMail'].Value, Mode=TwoWay}" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="3"
                            Margin="0,0,10,0"
                            Orientation="Vertical">
                            <TextBlock
                                MinWidth="300"
                                Margin="5"
                                Style="{ThemeResource DetailBodyBaseMediumStyle}"
                                Text="Database" />
                            <AutoSuggestBox
                                x:Name="asb_LiftPlanner"
                                Margin="5"
                                Padding="5"
                                ItemsSource="{x:Bind ViewModel.FilteredLiftPlanners, Mode=OneWay}"
                                PlaceholderText="Fachplaner wählen"
                                QueryIcon="Find"
                                Text="{x:Bind ViewModel.AutoSuggestBoxText, Mode=TwoWay}">
                                <interactivity:Interaction.Behaviors>
                                    <core:EventTriggerBehavior EventName="TextChanged">
                                        <core:InvokeCommandAction Command="{x:Bind ViewModel.FilterLiftPlannersCommand}" CommandParameter="{x:Bind asb_LiftPlanner}" />
                                    </core:EventTriggerBehavior>
                                    <core:EventTriggerBehavior EventName="SuggestionChosen">
                                        <core:InvokeCommandAction Command="{x:Bind ViewModel.SelectLiftPlannersCommand}" InputConverter="{StaticResource AutoSuggestionChosenParameterConverter}" />
                                    </core:EventTriggerBehavior>
                                </interactivity:Interaction.Behaviors>
                            </AutoSuggestBox>
                            <TextBlock Margin="5" Text="gewählter Fachplaner:" />
                            <TextBlock Margin="5" Text="{x:Bind ViewModel.SelectedLiftPlanner, Mode=OneWay}" />
                            <Button
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.GetLiftPlannerFromDatabaseCommand}"
                                FontWeight="Bold"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Margin="-5,0,5,0" Symbol="Contact" />
                                    <TextBlock Text="Fachplaner auswählen" />
                                </StackPanel>
                            </Button>
                            <Button
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.AddLiftPlannerDialogCommand}"
                                CommandParameter="{x:Bind AddNewLiftPlannerDialog}"
                                FontWeight="Bold"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Margin="-5,0,5,0" Symbol="AddFriend" />
                                    <TextBlock Text="{x:Bind ViewModel.DataBaseAction, Mode=OneWay}" />
                                </StackPanel>
                            </Button>
                            <Button
                                Margin="5"
                                HorizontalAlignment="Stretch"
                                Command="{x:Bind ViewModel.ResetLiftPlannerCommand}"
                                FontWeight="Bold"
                                Style="{StaticResource AccentButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon Margin="-5,0,5,0" Glyph="&#xE8CF;" />
                                    <TextBlock Text="Reset Fachplanner" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Expander>
                <Button
                    Grid.Column="0"
                    Margin="0,6,50,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{x:Bind ViewModel.SaveAllParameterCommand}"
                    Style="{StaticResource SaveButton}">
                    <ToolTipService.ToolTip>
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="Save All Parameter" />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Save" />
                </Button>
                <Expander
                    x:Name="AllgemeineDaten"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    Header="Allgemeine Aufzugsdaten"
                    IsExpanded="True"
                    Style="{StaticResource ExpanderContentStyle}">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*">
                        <Grid x:Name="Termine" Grid.Row="0">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,10">
                                <Border
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Termine" />
                                <Grid
                                    x:Name="Allgemein0"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*,*">
                                    <SpeziControls:ParameterCalendarDatePicker
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FreigabeErfolgtAm'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterCalendarDatePicker
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Demontage'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterCalendarDatePicker
                                        Grid.Column="2"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_AuslieferungAm'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterCalendarDatePicker
                                        Grid.Column="3"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FertigstellungAm'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="GrundDaten"
                            Grid.Row="1"
                            Margin="0,0,0,5">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,10">
                                <Border
                                    Grid.RowSpan="3"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.RowSpan="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Grundinformationen" />
                                <Grid
                                    x:Name="Allgemein1"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*">
                                    <SpeziControls:ParameterComboBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Lieferart'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterComboBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_InformationAufzug'], Mode=TwoWay}"
                                        ShowDefaultHeader="True">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                <Run
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Text="Neuanlage:" />
                                                <LineBreak />
                                                Neue Aufzugsanlage in neuen Schacht.<LineBreak />
                                                Die Fabriknummer entspricht unserer<LineBreak />
                                                Auftragsnummer.<LineBreak />
                                                <Run
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Text="Umbau:" />
                                                <LineBreak />
                                                Umbau bzw. Modernisierung einer bestehenden<LineBreak />
                                                Aufzugsanlage,also Ersatz einzelner Komponenten.<LineBreak />
                                                Die alte Fabriknummer bleibt bestehen.<LineBreak />
                                                <Run
                                                    FontSize="12"
                                                    FontWeight="Bold"
                                                    Text="Ersatzanlage:" />
                                                <LineBreak />
                                                Neuer Aufzug in bestehenden Schacht<LineBreak />
                                                in dem vorher schon ein Aufzug war.<LineBreak />
                                                Die Fabriknummer entspricht unserer<LineBreak />
                                                Auftragsnummer,die alte Fabriknummer<LineBreak />
                                                muss angegeben werden damit der<LineBreak />
                                                TÜV die ausgebaute Anlage austragen kann.</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterComboBox>
                                    <SpeziControls:ParameterTextBox
                                        Grid.Column="2"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FabriknummerBestand'], Mode=TwoWay}"
                                        ShowDefaultHeader="True">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                Fabriknummer der alten Bestandsanlage<LineBreak />
                                                Wird bei einer Ersatzanlage benötigt.</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterTextBox>
                                </Grid>
                                <Grid
                                    x:Name="Allgemein2"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <SpeziControls:ParameterComboBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Gebaeudetyp'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FE_Gebaeude'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="Anlagedaten"
                            Grid.Row="2"
                            Margin="0,0,0,5">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,10">
                                <Border
                                    Grid.RowSpan="7"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.RowSpan="6"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Anlagedaten" />
                                <Grid
                                    x:Name="Allgemein3"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <SpeziControls:ParameterComboBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Aufzugstyp'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FE_Aufzugstyp'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein4"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <SpeziControls:ParameterComboBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Beladegeraet'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FE_Beladegeraete'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein5"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*,*">
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Q'], Mode=TwoWay}"
                                        PlaceholderText="Q"
                                        ShowDefaultHeader="True"
                                        Unit="kg" />
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Q1'], Mode=TwoWay}"
                                        PlaceholderText="Q'"
                                        ReadOnly="True"
                                        ShowDefaultHeader="True"
                                        Unit="kg">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                <Run FontSize="16" Text="Schreibgeschützer Parameter:" /><LineBreak />
                                                Gedrängelast wird automatisch berechnet</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterNumberTextBox>
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="2"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_F'], Mode=TwoWay}"
                                        PlaceholderText="F"
                                        ReadOnly="True"
                                        ShowDefaultHeader="True"
                                        Unit="kg">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                <Run FontSize="16" Text="Schreibgeschützer Parameter:" /><LineBreak />
                                                Fahrkorbgewicht wird automatisch berechnet</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterNumberTextBox>
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="3"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Personen'], Mode=TwoWay}"
                                        ReadOnly="True"
                                        ShowDefaultHeader="True"
                                        Unit="Per.">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                <Run FontSize="16" Text="Schreibgeschützer Parameter:" /><LineBreak />
                                                Personenanzahl wird automatisch berechnet</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterNumberTextBox>
                                </Grid>
                                <Grid
                                    x:Name="Allgemein6"
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,2*">
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_v'], Mode=TwoWay}"
                                        PlaceholderText="v"
                                        ShowDefaultHeader="True"
                                        Unit="m/s" />
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FH'], Mode=TwoWay}"
                                        PlaceholderText="FH"
                                        ShowDefaultHeader="True"
                                        Unit="m" />
                                    <SpeziControls:ParameterTextBox
                                        Grid.Column="2"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_FE_FH'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                </Grid>
                                <Grid
                                    x:Name="Allgemein7"
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="2*,2*,*,*,*,*">
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Haltestellen'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Zugangsstellen'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterCheckBox
                                        Grid.Column="2"
                                        CheckBoxContent="Zugang A"
                                        IsEnabled="False"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_A'], Mode=TwoWay}"
                                        ShowDefaultCheckBoxContent="False">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterCheckBox>
                                    <SpeziControls:ParameterCheckBox
                                        Grid.Column="3"
                                        CheckBoxContent="Zugang B"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_B'], Mode=TwoWay}"
                                        ShowDefaultCheckBoxContent="False">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterCheckBox>
                                    <SpeziControls:ParameterCheckBox
                                        Grid.Column="4"
                                        CheckBoxContent="Zugang C"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_C'], Mode=TwoWay}"
                                        ShowDefaultCheckBoxContent="False">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterCheckBox>
                                    <SpeziControls:ParameterCheckBox
                                        Grid.Column="5"
                                        CheckBoxContent="Zugang D"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_ZUGANSSTELLEN_D'], Mode=TwoWay}"
                                        ShowDefaultCheckBoxContent="False">
                                        <ToolTipService.ToolTip>
                                            <StackPanel>
                                                <TextBlock
                                                    Margin="5,5,5,10"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="16"
                                                    FontWeight="Bold"
                                                    Text="Position Zugänge" />
                                                <Image
                                                    Width="325"
                                                    Height="350"
                                                    Source="/Images/carAccesses.png" />
                                            </StackPanel>
                                        </ToolTipService.ToolTip>
                                    </SpeziControls:ParameterCheckBox>
                                </Grid>
                                <Grid
                                    x:Name="Allgemein8"
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*">
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="0"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Aussenhaltestellen'], Mode=TwoWay}"
                                        ShowDefaultHeader="True" />
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="1"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_maxFahrtenStunde'], Mode=TwoWay}"
                                        ShowDefaultHeader="True"
                                        Unit="Fahrten" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="Normen"
                            Grid.Row="3"
                            Margin="0,0,0,5">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,Auto,10">
                                <Border
                                    Grid.RowSpan="3"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.RowSpan="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Normen" />
                                <Grid
                                    x:Name="Allgemein9"
                                    Grid.Row="0"
                                    Grid.Column="1"
