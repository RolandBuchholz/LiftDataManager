                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="11"
                            Height="30"
                            Margin="0,0,0,5"
                            ui:Effects.Shadow="{StaticResource CommonShadow}"
                            Background="{ThemeResource SystemAccentColorDark1}"
                            CornerRadius="5" />
                        <Border
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="10"
                            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" />
                        <Border
                            Grid.Row="4"
                            Grid.Column="1"
                            Grid.ColumnSpan="10"
                            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="0" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="1" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="3"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="2" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="4"
                            Margin="0,0,0,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Text="3" />
