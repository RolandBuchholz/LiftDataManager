                            ui:TextBoxExtensions.ValidationType="Decimal"
                            Style="{StaticResource TableTextboxStyle}"
                            Text="{x:Bind ViewModel.ParamterDictionary['var_Etagenhoehe7'].Value, Mode=TwoWay}">
                            <ToolTipService.ToolTip>
                                <TextBlock>
                                    Stockwerksabstand<LineBreak />
                                    zwischen 7 und 8</TextBlock>
                            </ToolTipService.ToolTip>
                        </TextBox>
                        <TextBox
                            Grid.Row="5"
                            Grid.Column="9"
                            ui:TextBoxExtensions.ValidationMode="Dynamic"
                            ui:TextBoxExtensions.ValidationType="Decimal"
                            Style="{StaticResource TableTextboxStyle}"
                            Text="{x:Bind ViewModel.ParamterDictionary['var_Etagenhoehe8'].Value, Mode=TwoWay}">
                            <ToolTipService.ToolTip>
                                <TextBlock>
                                    Stockwerksabstand<LineBreak />
                                    zwischen 8 und 9</TextBlock>
                            </ToolTipService.ToolTip>
                        </TextBox>

                    </Grid>
                </controls:Expander>
                <Button
                    Grid.Column="0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{x:Bind ViewModel.SaveAllSpeziParametersAsync}"
                    Style="{StaticResource SaveButton}">
                    <ToolTipService.ToolTip>
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="Save All Parameter" />
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="Save" />
                </Button>
                <controls:Expander
                    x:Name="AllgemeineSchachtDaten"
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    ExpandDirection="Down"
                    Header="Allgemeine Schachtdaten"
                    IsExpanded="True">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*">
                        <Grid
                            Name="Befestigung"
                            Grid.Row="0"
                            ColumnDefinitions="*,*,*">
                            <ComboBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Schacht Information"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_SchachtInformation'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_SchachtInformation'].DropDownListValue, Mode=TwoWay}" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Schachtwände"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Schacht'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Schacht'].DropDownListValue, Mode=TwoWay}" />
                            <ComboBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Befestigung"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Befestigung'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Befestigung'].DropDownListValue, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Maschinenraum"
                            Grid.Row="1"
                            ColumnDefinitions="*,*">
                            <ComboBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Maschinenraumposition"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_Maschinenraum'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_Maschinenraum'].DropDownListValue, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Schachtabmessungen1"
                            Grid.Row="2"
                            ColumnDefinitions="*,*">
                            <TextBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                ui:TextBoxExtensions.ValidationMode="Dynamic"
                                ui:TextBoxExtensions.ValidationType="Decimal"
                                Header="Schachtbreite [mm]"
                                PlaceholderText="SB"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_SB'].Value, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                ui:TextBoxExtensions.ValidationMode="Dynamic"
                                ui:TextBoxExtensions.ValidationType="Decimal"
                                Header="Schachttiefe [mm]"
                                PlaceholderText="ST"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_ST'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Schachtabmessungen2"
                            Grid.Row="3"
                            ColumnDefinitions="*,*">
                            <TextBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                ui:TextBoxExtensions.ValidationMode="Dynamic"
                                ui:TextBoxExtensions.ValidationType="Decimal"
                                Header="Schachtgrubentiefe [mm]"
                                PlaceholderText="SG"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_SG'].Value, Mode=TwoWay}" />
                            <TextBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                ui:TextBoxExtensions.ValidationMode="Dynamic"
                                ui:TextBoxExtensions.ValidationType="Decimal"
                                Header="Schachtkopfhöhe [mm]"
                                PlaceholderText="SK"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_SK'].Value, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Schachtgeruest"
                            Grid.Row="4"
                            ColumnDefinitions="*,*">
                            <TextBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                Header="Schachtgerüst Farbe"
                                Text="{x:Bind ViewModel.ParamterDictionary['var_GeruestFarbe'].Value, Mode=TwoWay}" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Schachtgerüst Feldfüllung"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_GeruestFeldfuellung'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_GeruestFeldfuellung'].DropDownListValue, Mode=TwoWay}" />
                        </Grid>
                        <Grid
                            Name="Brandschutz"
                            Grid.Row="5"
                            ColumnDefinitions="*,*,*">
                            <ComboBox
                                Grid.Column="0"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Brandschutzmaßnahmen an den Schachttüren"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_BsMit'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_BsMit'].DropDownListValue, Mode=TwoWay}" />
                            <ComboBox
                                Grid.Column="1"
                                Margin="5,0,5,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Header="Brandschutz erstellt von"
                                ItemsSource="{x:Bind ViewModel.ParamterDictionary['var_BsLiefer'].DropDownList, Mode=OneWay}"
                                SelectedValue="{x:Bind ViewModel.ParamterDictionary['var_BsLiefer'].DropDownListValue, Mode=TwoWay}" />
                            <CheckBox
                                Grid.Column="2"
                                Margin="5,0,5,0"
                                VerticalAlignment="Bottom"
                                Content="Brandschutz nach DIN 4102 F90"
                                IsChecked="{x:Bind ViewModel.ParamterDictionary['var_BsDin'].Value, Mode=TwoWay, Converter={StaticResource StringToBoolConverter}}" />
                        </Grid>
                    </Grid>
                </controls:Expander>
            </Grid>
        </ScrollViewer>
        <!--  InfoSidebarPanel  -->
        <SpeziControls:SidebarPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,10,10,10"
            InfoText="{x:Bind ViewModel.InfoSidebarPanelText, Mode=TwoWay}" />
        <!--  Footer  -->
        <SpeziControls:FooterControl
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="0"
            CheckOut="{x:Bind ViewModel.CheckOut, Mode=OneWay}"
            ParameterFound="{x:Bind ViewModel.ParamterDictionary.Count, Mode=OneWay}"
            XmlPath="{x:Bind ViewModel.FullPathXml, Mode=OneWay}" />
    </Grid>
</Page>
