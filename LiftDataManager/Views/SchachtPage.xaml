                                <StackPanel>
                                    <TextBlock
                                        Margin="5,5,5,10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Text="Position Zugänge" />
                                    <Image
                                        Width="325"
                                        Height="350"
                                        Source="/Images/carAccesses.png" />
                                </StackPanel>
                            </ToolTipService.ToolTip>
