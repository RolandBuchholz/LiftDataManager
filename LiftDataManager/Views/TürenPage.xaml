                                </Grid>
                                <Grid
                                    x:Name="TuerTyp2_B"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="2*,*">
                                    <Grid
                                        Grid.Column="0"
                                        Background="Transparent"
                                        IsHitTestVisible="True">
                                        <SpeziControls:ParameterComboBox
