                                        Margin="5,0,5,0"
                                        ui:TextBoxExtensions.ValidationMode="Dynamic"
                                        ui:TextBoxExtensions.ValidationType="Number"
                                        Header="Anzahl Türflügel"
                                        IsReadOnly="True"
                                        Text="{x:Bind ViewModel.ParamterDictionary['var_AnzahlTuerfluegel_B'].Value, Mode=TwoWay}">
                                        <ToolTipService.ToolTip>
                                            <TextBlock>
                                                <Run FontSize="16" Text="Schreibgeschützer Parameter:" /><LineBreak />
                                                Wird automtisch mit der Türauswahl gesetzt</TextBlock>
                                        </ToolTipService.ToolTip>
                                    </TextBox>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid
                            x:Name="TuerTyp0_C"
                            Grid.Row="4"
                            Visibility="{x:Bind ViewModel.ShowCarDoorDataC, Mode=OneWay}">
                            <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,10">
                                <Border
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="2"
