                                    Grid.RowSpan="3"
                                    Grid.ColumnSpan="2"
                                    ui:Effects.Shadow="{StaticResource CommonShadow}"
                                    Style="{StaticResource ResourceKey=SpeziRowBorderStyle}" />
                                <TextBlock
                                    Grid.RowSpan="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="Türen Abmessungen" />
                                <Button
                                    Grid.RowSpan="2"
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Bottom"
                                    Command="{x:Bind ViewModel.SetVariableCarDoorDataCommand}"
                                    Content="variable Türdaten"
                                    Style="{StaticResource AccentButtonStyle}" />
                                <Grid
                                    Name="Tuerabmessungen"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="0,0,5,0"
                                    ColumnDefinitions="*,*,*">
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="0"
                                        Header="Türbreite"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_TB'], Mode=TwoWay}"
                                        ShowDefaultHeader="False"
                                        Unit="mm" />
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="1"
                                        Header="Türhöhe"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_TH'], Mode=TwoWay}"
                                        ShowDefaultHeader="False"
                                        Unit="mm" />
                                    <SpeziControls:ParameterNumberTextBox
                                        Grid.Column="2"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Tuergewicht'], Mode=TwoWay}"
                                        ShowDefaultHeader="True"
                                        Unit="kg" />
                                </Grid>
