                                        Grid.Column="2"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Kabdach'], Mode=TwoWay}"
                                        ShowDefaultCheckBoxContent="True" />
                                    <SpeziControls:ParameterCheckBox
                                        Grid.Column="3"
                                        LiftParameter="{x:Bind ViewModel.ParameterDictionary['var_Schgrube'], Mode=TwoWay}"
                                        ShowDefaultCheckBoxContent="True" />
