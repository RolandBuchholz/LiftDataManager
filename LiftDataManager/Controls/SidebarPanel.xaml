<UserControl
    x:Class="LiftDataManager.Controls.SidebarPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <controls:Expander
        x:Name="InfoSidebarPanel"
        ExpandDirection="Left"
        Header="Info Sidebar Panel"
        Style="{StaticResource ExpanderInfoSidebarPanelStyle}">
        <ScrollViewer
            Name="InfoTextScroller"
            MinWidth="250"
            MaxWidth="350"
            Padding="10"
            VerticalAlignment="Top"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Button
                    x:Name="btn_ClearInfoText"
                    Width="100"
                    Margin="0,0,0,0"
                    Padding="0"
                    HorizontalAlignment="Left"
                    Click="btn_ClearInfoText_Click"
                    Content="ClearInfoText"
                    IsEnabled="{x:Bind CanTextClear, Mode=OneWay}"
                    Style="{StaticResource AccentButtonStyle}" />
                <TextBlock
                    VerticalAlignment="Top"
                    Text="{x:Bind InfoText, Mode=TwoWay}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </controls:Expander>
</UserControl>
