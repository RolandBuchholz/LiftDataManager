<ContentDialog
    x:Class="LiftDataManager.Services.Dialogs.ErrorContentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LiftDataManager.Services.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <Style BasedOn="{StaticResource DefaultContentDialogStyle}" TargetType="local:ErrorContentDialog" />
    </ContentDialog.Resources>
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Text="{x:Bind ErrorMessage, Mode=OneTime}" TextWrapping="Wrap" />
        <Expander
            Width="500"
            Margin="0,15,0,15"
            HorizontalAlignment="Stretch"
            Header="Show Errorlog">
            <TextBlock Text="Lojksafakgfasgfk " />
        </Expander>
        <TextBlock FontWeight="SemiBold" Text="Errorlogdatei versenden" />
        <TextBlock Margin="0,0,0,-15" Text="roland.buchholz@berchtenbeiter-gmbh.de" />
    </StackPanel>
</ContentDialog>
